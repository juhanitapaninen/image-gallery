<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= image.name %></h1>
        <div style="min-width:200px; width: 30%; margin: 25px auto;">
            <form action="/projects/<%= project._id %>/images/<%= image._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="image[name]" value="<%= image.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image[description]" value="<%= image.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/projects/<%= project._id %>/images/<%= image._id %>/">Go Back</a>
        </div>
    </div>
</div>

<%include ../partials/footer.ejs %>