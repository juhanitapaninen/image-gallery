<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Image Gallery</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= image.image %>">
                <div class="caption-full">
                    <h4><a><%= image.name %></a></h4>
                    <p><%= image.description %></p>
                    <p>
                        <em>Submitted By <%= image.author.username %></em>
                    </p>
                </div>
                <% if(currentUser && image.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning" href="/images/<%= image._id %>/edit">Edit</a>
                    <form id="delete-form" action="/images/<%= image._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">delete</button>
                    </form>
                <% } %>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/images/<%= image._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% image.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span> <!-- TODO -->
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%include ../partials/footer.ejs %>
</div>
