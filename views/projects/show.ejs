<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4><a><%= project.name %></a></h4>
                    <p><%= project.description %></p>
                    <p>
                        <em>Submitted By <%= project.author.username %></em>
                    </p>
                </div>
                <% if(currentUser && project.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning" href="/projects/<%= project._id %>/edit">Edit</a>
                    <form class="delete-form" action="/projects/<%= project._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                <% } %>
            </div>
            <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                <% project.images.forEach(function(image){ %>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="thumbnail">
                            <% if(image.imageData.data) { %>
                                <img src="data:<%= image.imageData.contentType %>;base64,<%= image.imageData.data.toString('base64') %>">
                            <% } else { %>
                                <img src="<%= image.image %>">
                            <% } %>
                            <div class="caption">
                                <h4><%= image.name %></h4>
                            </div>
                            <p>
                                <a class="btn btn-primary" href="<%= project._id %>/images/<%= image.id %>">More info</a>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/projects/<%= project._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% project.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span> <!-- TODO -->
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-xs btn-warning" href="/projects/<%= project._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                <form class="delete-form" action="/projects/<%= project._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%include ../partials/footer.ejs %>
</div>
