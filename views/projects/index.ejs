<% include ../partials/header.ejs %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1><i class="fa fa-picture-o"></i> Welcome To Image Gallery</h1>
            <p>View, store, categorize and comment memories from days past</p>
            <p>
                <a class="btn btn-primary btn-large" href="/projects/new">Add New Project</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% projects.forEach(function(project){ %>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <img src="<%= project.image %>">
                    <div class="caption">
                        <h4><%= project.name %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/projects/<%= project.id %>">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<%include ../partials/footer.ejs %>