<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 class="custom-header-style">Add New Comment to <%= image.name %></h1>
        <div class="custom-form-style">
            <form action="/images/<%= image._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/images">Go Back</a>
        </div>
    </div>
</div>

<%include ../partials/footer.ejs %>